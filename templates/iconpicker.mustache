{{!
    @template block_floatingbutton/iconpicker

    Template for iconpicker.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * none

    Example context (json):
    {
    }
}}
<div class="mbs-iconpicker">
    <div class="mbs-iconpicker-search">
        <label for="mbs-iconpicker-search">{{#str}} iconsearch, block_floatingbutton {{/str}}</label>
        <input id="mbs-iconpicker-search" class="mbs-iconpicker-search-input">
    </div>
    {{#icons}}
        <div class="mbs-iconpicker-icon" id="mbs-iconpicker-icon-{{index}}" data-search="{{value}} {{searchvalues}}">
            <i class="{{value}}"></i>
        </div>
    {{/icons}}
</div>
