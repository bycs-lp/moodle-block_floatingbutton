{{!
    @template block_floatingbutton/edit

    Template for displaying the edit-button.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * none

    Example context (json):
    {
    "icons":[
        {
            "name":"Section 0",
            "url":"https://localhost/...",
            "icon":"fa-globe",
            "iconstyle":"background:green;"
        }
    ]
    }
}}
<form method="post" href="{{{url}}}">
    <input type="hidden" name="id" value="{{courseid}}"/>
    <input type="hidden" name="sesskey" value="{{sesskey}}"/>
    <input type="hidden" name="edit" value="{{#editing}}off{{/editing}}{{^editing}}on{{/editing}}"/>
    <button type="submit" title="{{name}}" style="background: {{backgroundcolor}}; color: {{textcolor}};" {{!
            }}class="{{#editing}} mbs-floatingicons-edit-active{{/editing}} btn btn-icon icon-no-margin mbs_floatingicon-btn">
        <i class="icon {{icon}}" aria-hidden="true"></i>
    </button>
</form>
