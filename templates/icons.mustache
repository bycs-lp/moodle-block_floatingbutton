{{!
    @template block_floatingbutton/icons

    Template for displaying the icons.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * none

    Example context (json):
    {
    "positionhorizontal":"left",
    "positionvertical":"top",
    "icons":[
        {
            "name":"Section 0",
            "url":"https://localhost/...",
            "icon":"fa-globe",
            "iconstyle":"background:green;"
        }
    ]
    }
}}
<div class="mbs-floatingicons mbs-floatingicons-{{positionhorizontal}} mbs-floatingicons-{{positionvertical}}"
style="{{#horizontal_space}}{{positionhorizontal}}: {{horizontal_space}}px;{{/horizontal_space}}
{{#vertical_space}}{{positionvertical}}: {{vertical_space}}px;{{/vertical_space}}
">
{{#icons}}
    {{^notavailable}}
        {{#edit}}
            {{> block_floatingbutton/edit }}
        {{/edit}}
        {{^edit}}
        <div class="mbs-floatingicons-icon">
            <a href="{{{url}}}" title="{{name}}" style="background: {{backgroundcolor}}; color: {{textcolor}};">
                <i class="{{icon}}" aria-hidden="true"></i>
            </a>
        </div>
        {{/edit}}
    {{/notavailable}}
{{/icons}}
</div>
